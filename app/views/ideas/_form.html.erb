<%= stylesheet_link_tag 'form', media: 'all' %>

<div class="container mx-auto">
    <div class="py-1 wrapper">

      <div class="form-wrapper">
          <%= form_for @idea do |f| %>
            <fieldset class="section is-active">
              <div class="fields"> 

                <%= f.label "Titulo*" %>
                <%= f.text_field :title %>
                <small id="emailHelp" class="form-text text-muted">Maximo 50 caracteres</small>

                <%= f.label "Descrição*" %>
                <%= text_area(:idea, :text, class: 'form-control textarea', type:"textarea") %>
                <small id="emailHelp" class="form-text text-muted">Maximo de 240 caracteres</small>

                <%= f.file_field :picture %>
                <small id="emailHelp" class="form-text text-muted">Imagem opcional</small>
                <%if flash[:alert]%>
                <div class="alert alert-danger">
                  <strong>Erro encontrado no preenchimento</strong>
                </div>
                <%end%>
              </div>
          <div class="actions">
            <%= f.submit 'Adicionar', class: "submit " %>
          </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
