<%= stylesheet_link_tag 'form', media: 'all' %>


  <div class="container mx-auto">
      <div class="py-1 wrapper">
        <div class="form-wrapper">
          <%= form_tag sessions_path do |form| %>
            <fieldset class="section is-active">
                <%= label_tag :email %>
                <%= text_field_tag :email %>

                <%= label_tag :password %>
                <%= password_field_tag :password %>
                <% if alert %>
                  <div class="alert alert-danger">
                    <strong><%= alert %></strong>
                  </div>
                <% end %>
              <div class="actions">
                <%= submit_tag "Login", class: "submit button" %>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>



